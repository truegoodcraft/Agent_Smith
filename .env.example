# ─────────────────────────────────────────────────────────────────────────────
# Agent Smith — .env.example
#
# Copy this file to .env and fill in your values.
# NEVER commit your actual .env file to version control.
# ─────────────────────────────────────────────────────────────────────────────

# ── Discord ──────────────────────────────────────────────────────────────────
# Your Discord bot token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Prefix for legacy text commands (slash commands are primary)
COMMAND_PREFIX=!

# ── Ollama ───────────────────────────────────────────────────────────────────
# URL of your Ollama server
OLLAMA_HOST=http://localhost:11434

# Default model to use (must be pulled on the Ollama server: ollama pull <model>)
OLLAMA_MODEL=llama3

# Timeout in seconds for Ollama requests (increase for large/slow models)
OLLAMA_TIMEOUT=120

# ── Permissions / Safety ─────────────────────────────────────────────────────
# Comma-separated Discord channel IDs the bot is allowed to respond in.
# Leave empty to allow all channels.
ALLOWED_CHANNEL_IDS=

# Comma-separated Discord user IDs that may invoke the bot.
# Leave empty to allow all users.
ALLOWED_USER_IDS=

# ── Rate Limiting ─────────────────────────────────────────────────────────────
# Maximum number of requests per user per window
RATE_LIMIT_REQUESTS=5

# Rate limit window duration in seconds
RATE_LIMIT_WINDOW=60

# ── Context / Memory ─────────────────────────────────────────────────────────
# Number of user+assistant message pairs to keep as context per channel
MAX_CONTEXT_PAIRS=10

# ── Logging ──────────────────────────────────────────────────────────────────
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
